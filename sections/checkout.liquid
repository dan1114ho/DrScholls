    $('.site-header__wrapper').addClass('cart-header');

    $('.products-carousel').slick({
      dots: false,
      arrows: true,
      infinite: true,
      slidesToShow: 1,
      responsive: [
        {
          breakpoint: 1024,
          settings: {
            arrows: false,
          }
        }
      ]
    });
  });
</script>
