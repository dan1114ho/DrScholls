    border-bottom: 1px solid rgb(243,243,243) !important;
    height: 85px;
  }

  .site-header__wrapper.cart-header a .white-icon {
    display: none !important;
  }

  .site-header__wrapper.cart-header a .blue-icon {
    display: block !important;
  }

