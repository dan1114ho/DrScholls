    }
  }

  @media only screen and (min-width: 200px) and (max-width: 767px) {
    .wiivv-cart-section {
      display: block;
    }

    .left-area {
      width: 100%;
      padding-bottom: 50px;
    }

    #sidebar-main-trigger img.white-icon {
      display: none !important;
    }

    #sidebar-main-trigger img.blue-icon {
      display: block !important;
    }

    .site-header__wrapper.cart-header .site-header__logo-image {
      width: 75px;
    }

    .wiivv-cart-section {
      padding-top: 60px;
    }

    .wiivv-row {
      width: 236px;
      padding-top: 20px;
      height: auto;
      margin-bottom: 50px;
    }

    .wiivv-item-countable-line::after, .wiivv-item-countable-line::before {
      width: 20%;
    }

    .progress-caption {
      display: none;
    }

    .user-name {
      margin-bottom: 20px;
    }

    .signup-title, .signup-description {
      width: 300px;
    }

    .signup-title {
      /* padding-bottom: 20px; */
    }

    .your-cart-area {
      width: 100%;
      padding: 30px;
    }

    .button-container {
      padding-bottom: 50px;
    }

    .button-container a.primary-button {
      width: 100%;
    }
  }
</style>

<script>
