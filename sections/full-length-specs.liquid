<style>
  #accordion {
    padding: 10px;
    margin: -40px 0 0 0;
    font-family: "Muli", sans-serif;
    hr {
      height:1px; 
      border:none; 
      color:#333;
      margin: 0;
    }
  }
  #accordion h3 {
    font-size: 20.6px;
    font-weight: 900;
    margin: 10px 0 10px 0;
    padding:10px 0 10px 0;
  }
  .ui-state-active, .ui-state-default, .ui-widget-content, .ui-state-default, .ui-widget-header, .ui-state-default {
    border-top: none!important;
    border-left: none!important;
    border-right: none!important;
    border-bottom: none!important;
    background: none!important;
  }
  .ui-accordion .ui-accordion-content {
    padding: 1em 1em;
  }
  .ui-widget-content {
    border: 0;
  }
  .rule {
    border-top: 1px solid #4A4A4A!important;
  }
  .ui-accordion-header-icon {
    float: right;
    margin: 10px 0 15px 0;
  }
  #slant {
    height: 50px;
  }
  #slant {
    content: '';
    position: relative;
    left: 0;
    top: -20px;
    width: 100%;
    height: 50px;
    background: #F3F3F3;
    -webkit-transform: skewY(-6.5deg);
    -moz-transform: skewY(-6.5deg);
    -ms-transform: skewY(-6.5deg);
    -o-transform: skewY(-6.5deg);
    transform: skewY(-6.5deg);
    -webkit-backface-visibility: hidden;
  }
</style>

<div class="page-width">
    <!-- accordion -->
  <div id="slant"></div>
  <div id="accordion">
   
    {% for block in section.blocks %}
      {% if block.type == 'Accordion' %}
        <h3>{{ block.settings.accordion_heading_text }}</h3>
        <div class="rule">
          {{ block.settings.accordion_paragraph_text }}
        </div>
      {% endif %}
    {% endfor %}

  </div>
</div>

<!-- <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script> -->
<script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>
  
<script>
var icons = {
  header: "ui-icon-circle-plus",
  activeHeader: "ui-icon-circle-minus"
};
$( "#accordion" ).accordion({
  heightStyle: "content",
  active: false,
  collapsible: true,
  icons: icons
});

</script>


{% schema %}
  {
"blocks": [
    {
      "type": "Accordion",
      "name": "Accordion Section",
      "settings": [
            {
              "type": "header",
              "content": "Accordion Sections"
            },
            {
              "type": "text",
              "id": "accordion_heading_text",
              "label": "Title text",
              "default": "Insert title text here"
            },            
            {
              "type": "html",
              "id": "accordion_paragraph_text",
              "label": "Body text",
              "default": "<p>insert text here</p>"
            }
          ]
    }

  ]
  }
{% endschema %}