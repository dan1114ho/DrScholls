<div class="technology-cover" style="background-image: url({{ section.settings.cover_image | img_url : 'master' }})"></div>
<div class="owl-carousel owl-theme">

  <!-- You can have as many slides as you want using the simple structure below per section -->
  <div class="item">

    <div class="sliderIcon">
      <img src="{{ section.settings.cardOneIcon | img_url : 'master' }}">
    </div>

    <div class="sliderText">
      <h4>{{ section.settings.cardOneHeader }}</h4>
      {{ section.settings.cardOneBody }}
    </div>
  </div>



  <div class="item">

    <div class="sliderIcon">
      <img src="{{ section.settings.cardTwoIcon | img_url : 'master' }}">
    </div>

    <div class="sliderText">
      <h4>{{ section.settings.cardTwoHeader }}</h4>
      {{ section.settings.cardTwoBody }}
    </div>
  </div>



  <div class="item">

    <div class="sliderIcon">
      <img src="{{ section.settings.cardThreeIcon | img_url : 'master' }}">
    </div>

    <div class="sliderText">
      <h4>{{ section.settings.cardThreeHeader }}</h4>
      {{ section.settings.cardThreeBody }}
    </div>
  </div>

</div>
<div class="technology-footer margin-bottom--large">
  <img src="{{ 'wiivv-brandmarque.png' | asset_img_url: 'master' }}" alt="Powered by Wiivv Fit Technology"/>
</div>

<style>
  .technology-cover {
    background-size: cover;
    background-position: center;
/*     width: 1440px; */
    height: 500px;
  }

  .help-icon-container {

  }
  
  .technology-footer {
  	display: flex;
    justify-content: center;
  }
  
  .technology-footer img {
  	width: 150px;
    height: 100%;
  }

  .technology-footer-text {
    text-align: center;
    color: #D6D6D6;
    font-weight: 600;
  }

  @media only screen and (max-width: 1024px) {
    .technology-cover {
      width: 100%;
      height: 300px;
    }
  }
</style>

<!-- JS FOR OWL CAROUSEL  -->
<script>
  $(document).ready(function() {
    var owl = $('.owl-carousel');
    owl.owlCarousel({
    margin: 0,
    loop: true,
    responsive:{
        0:{
            items:1,
            dots:true
        },
        768:{
            items:3,
           dots:false
         }
    }
    })
  })
</script>

